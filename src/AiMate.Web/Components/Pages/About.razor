@page "/about"
@rendermode InteractiveServer

<PageTitle>About - aiMate</PageTitle>

<MudPaper Elevation="0" Class="pa-6">
    <div class="mb-6">
        <MudText Typo="Typo.h4" Class="mb-2">
            <MudIcon Icon="@Icons.Material.Filled.Info" Class="mr-2" />
