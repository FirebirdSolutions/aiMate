@page "/admin"
@using AiMate.Web.Components.Admin
@using Fluxor
@using AiMate.Web.Store.Admin
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<AdminState> AdminState
@inject IDispatcher Dispatcher
@rendermode InteractiveServer

<PageTitle>Administration - aiMate</PageTitle>

<div class="flex flex-col h-full bg-[#0F0F0F] px-6 py-6">
    <div class="max-w-7xl mx-auto w-full">
        <!-- Header -->
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center gap-3">
                <svg class="w-8 h-8 text-purple-500" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>
                </svg>
                <h1 class="text-3xl font-bold text-gray-100">Administration</h1>
            </div>
            <span class="px-3 py-1.5 bg-green-500/20 text-green-400 text-xs font-semibold rounded-full border border-green-500/50 flex items-center gap-1.5">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"/>
                </svg>
                Admin Mode
            </span>
        </div>

        <!-- Error Alert -->
        @if (AdminState.Value.Error != null)
        {
            <div class="bg-red-500/10 border border-red-500/50 rounded-lg p-4 mb-6 flex items-start gap-3">
                <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
                <div class="flex-1">
                    <p class="text-red-400 text-sm">@AdminState.Value.Error</p>
                </div>
                <button @onclick="@(() => Dispatcher.Dispatch(new ClearAdminErrorAction()))"
                        class="text-red-400 hover:text-red-300 transition-colors">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
        }

        <!-- Saving Alert -->
        @if (AdminState.Value.IsSaving)
        {
            <div class="bg-blue-500/10 border border-blue-500/50 rounded-lg p-4 mb-6 flex items-center gap-3">
                <div class="w-5 h-5 border-2 border-blue-500/30 border-t-blue-500 rounded-full animate-spin flex-shrink-0"></div>
                <p class="text-blue-400 text-sm">Saving changes...</p>
            </div>
        }

        <!-- Tab Navigation -->
        <div class="bg-[#1A1A1A] border border-[#2A2A2A] rounded-xl overflow-hidden">
            <div class="border-b border-[#2A2A2A]">
                <nav class="flex gap-1 p-2">
                    <button @onclick="@(() => SetActiveTab(0))"
                            class="@GetTabClass(0) px-4 py-2.5 text-sm font-medium rounded-lg transition-all flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/>
                        </svg>
                        Overview
                    </button>
                    <button @onclick="@(() => SetActiveTab(1))"
                            class="@GetTabClass(1) px-4 py-2.5 text-sm font-medium rounded-lg transition-all flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z"/>
                        </svg>
                        Models
                    </button>
                    <button @onclick="@(() => SetActiveTab(2))"
                            class="@GetTabClass(2) px-4 py-2.5 text-sm font-medium rounded-lg transition-all flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.758-3.848 5.25 5.25 0 00-10.233 2.33A4.502 4.502 0 002.25 15z"/>
                        </svg>
                        Connections
                    </button>
                    <button @onclick="@(() => SetActiveTab(3))"
                            class="@GetTabClass(3) px-4 py-2.5 text-sm font-medium rounded-lg transition-all flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 01-.657.643 48.39 48.39 0 01-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 01-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 00-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 01-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 00.657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 01-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.4.604-.4.959v0c0 .333.277.599.61.58a48.1 48.1 0 005.427-.63 48.05 48.05 0 00.582-4.717.532.532 0 00-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.96.401v0a.656.656 0 00.658-.663 48.422 48.422 0 00-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 01-.61-.58v0z"/>
                        </svg>
                        MCP Servers
                    </button>
                    <button @onclick="@(() => SetActiveTab(4))"
                            class="@GetTabClass(4) px-4 py-2.5 text-sm font-medium rounded-lg transition-all flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z"/>
                        </svg>
                        Users
                    </button>
                    <button @onclick="@(() => SetActiveTab(5))"
                            class="@GetTabClass(5) px-4 py-2.5 text-sm font-medium rounded-lg transition-all flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M5.25 14.25h13.5m-13.5 0a3 3 0 01-3-3m3 3a3 3 0 100 6h13.5a3 3 0 100-6m-16.5-3a3 3 0 013-3h13.5a3 3 0 013 3m-19.5 0a4.5 4.5 0 01.9-2.7L5.737 5.1a3.375 3.375 0 012.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 01.9 2.7m0 0a3 3 0 01-3 3m0 3h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008zm-3 6h.008v.008h-.008v-.008zm0-6h.008v.008h-.008v-.008z"/>
                        </svg>
                        System
                    </button>
                    <button @onclick="@(() => SetActiveTab(6))"
                            class="@GetTabClass(6) px-4 py-2.5 text-sm font-medium rounded-lg transition-all flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M14.25 6.087c0-.355.186-.676.401-.959.221-.29.349-.634.349-1.003 0-1.036-1.007-1.875-2.25-1.875s-2.25.84-2.25 1.875c0 .369.128.713.349 1.003.215.283.401.604.401.959v0a.64.64 0 01-.657.643 48.39 48.39 0 01-4.163-.3c.186 1.613.293 3.25.315 4.907a.656.656 0 01-.658.663v0c-.355 0-.676-.186-.959-.401a1.647 1.647 0 00-1.003-.349c-1.036 0-1.875 1.007-1.875 2.25s.84 2.25 1.875 2.25c.369 0 .713-.128 1.003-.349.283-.215.604-.401.959-.401v0c.31 0 .555.26.532.57a48.039 48.039 0 01-.642 5.056c1.518.19 3.058.309 4.616.354a.64.64 0 00.657-.643v0c0-.355-.186-.676-.401-.959a1.647 1.647 0 01-.349-1.003c0-1.035 1.008-1.875 2.25-1.875 1.243 0 2.25.84 2.25 1.875 0 .369-.128.713-.349 1.003-.215.283-.4.604-.4.959v0c0 .333.277.599.61.58a48.1 48.1 0 005.427-.63 48.05 48.05 0 00.582-4.717.532.532 0 00-.533-.57v0c-.355 0-.676.186-.959.401-.29.221-.634.349-1.003.349-1.035 0-1.875-1.007-1.875-2.25s.84-2.25 1.875-2.25c.37 0 .713.128 1.003.349.283.215.604.401.96.401v0a.656.656 0 00.658-.663 48.422 48.422 0 00-.37-5.36c-1.886.342-3.81.574-5.766.689a.578.578 0 01-.61-.58v0z"/>
                        </svg>
                        Plugins
                    </button>
                </nav>
            </div>

            <!-- Tab Content -->
            <div class="p-6">
                @if (_activeTabIndex == 0)
                {
                    <OverviewAdminTab />
                }
                else if (_activeTabIndex == 1)
                {
                    <ModelsAdminTab />
                }
                else if (_activeTabIndex == 2)
                {
                    <ConnectionsAdminTab />
                }
                else if (_activeTabIndex == 3)
                {
                    <McpAdminTab />
                }
                else if (_activeTabIndex == 4)
                {
                    <UsersAdminTab />
                }
                else if (_activeTabIndex == 5)
                {
                    <SystemAdminTab />
                }
                else if (_activeTabIndex == 6)
                {
                    <PluginsAdminTab />
                }
            </div>

            <!-- Actions Bar -->
            <div class="border-t border-[#2A2A2A] p-4 flex items-center justify-between">
                <button @onclick="HandleRefresh"
                        class="px-4 py-2 bg-[#0F0F0F] hover:bg-[#242424] border border-[#2A2A2A] text-gray-300 rounded-lg text-sm font-medium transition-all flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182m0-4.991v4.99"/>
                    </svg>
                    Refresh
                </button>

                <button @onclick="HandleSave"
                        disabled="@AdminState.Value.IsSaving"
                        class="px-4 py-2 bg-purple-600 hover:bg-purple-700 disabled:bg-purple-600/50 disabled:cursor-not-allowed text-white rounded-lg text-sm font-medium transition-all flex items-center gap-2">
                    @if (AdminState.Value.IsSaving)
                    {
                        <div class="w-4 h-4 border-2 border-white/30 border-t-white rounded-full animate-spin"></div>
                        <span>Saving...</span>
                    }
                    else
                    {
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                            <path d="M17 16v2a2 2 0 01-2 2H5a2 2 0 01-2-2v-7a2 2 0 012-2h2m3-4H9a2 2 0 00-2 2v7a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-1m-1 4l-3 3m0 0l-3-3m3 3V3"/>
                        </svg>
                        <span>Save Changes</span>
                    }
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private int _activeTabIndex = 0;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        // Sync local tab index with AdminState
        _activeTabIndex = AdminState.Value.ActiveTab;

        // Load admin data on component init
        if (!AdminState.Value.IsLoading)
        {
            Dispatcher.Dispatch(new LoadAdminDataAction());
        }
    }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        // Sync local tab index with AdminState when it changes
        _activeTabIndex = AdminState.Value.ActiveTab;
    }

    private void SetActiveTab(int index)
    {
        _activeTabIndex = index;
        Dispatcher.Dispatch(new SetActiveAdminTabAction(index));
        StateHasChanged();
    }

    private string GetTabClass(int index)
    {
        return _activeTabIndex == index
            ? "bg-purple-600 text-white"
            : "text-gray-400 hover:text-gray-200 hover:bg-[#0F0F0F]";
    }

    private void HandleTabChange(int index)
    {
        Dispatcher.Dispatch(new SetActiveAdminTabAction(index));
    }

    private void HandleSave()
    {
        Dispatcher.Dispatch(new SaveAdminChangesAction());
    }

    private void HandleRefresh()
    {
        Dispatcher.Dispatch(new LoadAdminDataAction());
    }
}
