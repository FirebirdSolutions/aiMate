@inject IJSRuntime JS

@if (IsVisible)
{
    <div class="fixed inset-0 bg-black/70 backdrop-blur-sm z-50 flex items-center justify-center p-4" @onclick="Close">
        <div class="bg-[#1A1A1A] border border-[#2A2A2A] rounded-xl shadow-2xl w-full max-w-2xl max-h-[90vh] overflow-y-auto"
             @onclick:stopPropagation="true">

            @* Dialog Header *@
            <div class="flex items-center justify-between px-6 py-4 border-b border-[#2A2A2A] sticky top-0 bg-[#1A1A1A]">
                <h3 class="text-lg font-semibold text-white">Share Conversation</h3>
                <button @onclick="Close"
                        class="p-2 text-gray-400 hover:text-white hover:bg-[#2A2A2A] rounded-lg transition-all">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>

            @* Dialog Content *@
            <div class="p-6 space-y-6">
                @* Share Link *@
                <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                    <p class="text-sm font-semibold text-gray-200 mb-3">Share Link</p>
                    <div class="flex gap-2">
                        <input type="text"
                               value="@_shareUrl"
                               readonly
                               class="flex-1 bg-[#0F0F0F] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm font-mono focus:outline-none focus:ring-2 focus:ring-purple-500" />
                        <button @onclick="CopyLinkToClipboard"
                                class="px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-all flex items-center gap-2 whitespace-nowrap">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                            </svg>
                            Copy
                        </button>
                    </div>
                    <p class="text-xs text-gray-400 mt-2">Anyone with this link can view the conversation</p>
                </div>

                @* Social Sharing *@
                <div>
                    <p class="text-sm font-semibold text-gray-200 mb-3">Share on Social Media</p>
                    <div class="grid grid-cols-2 sm:grid-cols-3 gap-2">
                        @* Twitter *@
                        <button @onclick="@(() => ShareOnPlatform("twitter"))"
                                class="flex items-center justify-center gap-2 px-4 py-2 bg-[#1DA1F2] hover:bg-[#1a8cd8] text-white rounded-lg transition-all text-sm font-medium">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                            </svg>
                            Twitter
                        </button>

                        @* Facebook *@
                        <button @onclick="@(() => ShareOnPlatform("facebook"))"
                                class="flex items-center justify-center gap-2 px-4 py-2 bg-[#1877F2] hover:bg-[#166fe5] text-white rounded-lg transition-all text-sm font-medium">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                            Facebook
                        </button>

                        @* LinkedIn *@
                        <button @onclick="@(() => ShareOnPlatform("linkedin"))"
                                class="flex items-center justify-center gap-2 px-4 py-2 bg-[#0A66C2] hover:bg-[#095196] text-white rounded-lg transition-all text-sm font-medium">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                            </svg>
                            LinkedIn
                        </button>

                        @* WhatsApp *@
                        <button @onclick="@(() => ShareOnPlatform("whatsapp"))"
                                class="flex items-center justify-center gap-2 px-4 py-2 bg-[#25D366] hover:bg-[#20bd5a] text-white rounded-lg transition-all text-sm font-medium">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
                            </svg>
                            WhatsApp
                        </button>

                        @* Email *@
                        <button @onclick="@(() => ShareOnPlatform("email"))"
                                class="flex items-center justify-center gap-2 px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-lg transition-all text-sm font-medium">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                            Email
                        </button>

                        @* Reddit *@
                        <button @onclick="@(() => ShareOnPlatform("reddit"))"
                                class="flex items-center justify-center gap-2 px-4 py-2 bg-[#FF4500] hover:bg-[#e63e00] text-white rounded-lg transition-all text-sm font-medium">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
                            </svg>
                            Reddit
                        </button>
                    </div>
                </div>

                @* QR Code *@
                <div class="border-t border-[#2A2A2A] pt-6">
                    <div class="flex items-center justify-between mb-3">
                        <p class="text-sm font-semibold text-gray-200">QR Code</p>
                        <button @onclick="ToggleQRCode"
                                class="flex items-center gap-2 px-3 py-1.5 bg-[#0F0F0F] hover:bg-[#2A2A2A] text-gray-300 rounded-lg transition-all text-sm">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                <path d="M12 4v1m6 11h2m-6 0h-2v4m0-11v3m0 0h.01M12 12h4.01M16 20h4M4 12h4m12 0h.01M5 8h2a1 1 0 001-1V5a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1zm12 0h2a1 1 0 001-1V5a1 1 0 00-1-1h-2a1 1 0 00-1 1v2a1 1 0 001 1zM5 20h2a1 1 0 001-1v-2a1 1 0 00-1-1H5a1 1 0 00-1 1v2a1 1 0 001 1z"/>
                            </svg>
                            @(_showQRCode ? "Hide" : "Show") QR Code
                        </button>
                    </div>

                    @if (_showQRCode)
                    {
                        <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-6 text-center">
                            <img src="@GetQRCodeUrl()" alt="QR Code" class="max-w-[200px] mx-auto rounded" />
                            <p class="text-xs text-gray-400 mt-3">Scan to open conversation</p>
                        </div>
                    }
                </div>

                @* Privacy Settings *@
                <div class="border-t border-[#2A2A2A] pt-6 space-y-4">
                    <p class="text-sm font-semibold text-gray-200">Privacy Settings</p>

                    @* Allow Public Access Toggle *@
                    <div class="flex items-center justify-between p-3 bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg">
                        <label class="text-sm font-medium text-gray-200">Allow public access</label>
                        <button type="button" @onclick="@(() => { _allowPublicAccess = !_allowPublicAccess; OnPrivacyChanged(_allowPublicAccess); })"
                                class="@(_allowPublicAccess ? "bg-purple-600" : "bg-gray-700") relative inline-flex h-6 w-11 items-center rounded-full transition-colors">
                            <span class="@(_allowPublicAccess ? "translate-x-6" : "translate-x-1") inline-block h-4 w-4 transform rounded-full bg-white transition-transform"></span>
                        </button>
                    </div>
                    <p class="text-xs text-gray-400">When enabled, anyone with the link can view this conversation without logging in</p>

                    @if (_allowPublicAccess)
                    {
                        @* Require Password Toggle *@
                        <div class="flex items-center justify-between p-3 bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg">
                            <label class="text-sm font-medium text-gray-200">Require password</label>
                            <button type="button" @onclick="@(() => _requirePassword = !_requirePassword)"
                                    class="@(_requirePassword ? "bg-yellow-600" : "bg-gray-700") relative inline-flex h-6 w-11 items-center rounded-full transition-colors">
                                <span class="@(_requirePassword ? "translate-x-6" : "translate-x-1") inline-block h-4 w-4 transform rounded-full bg-white transition-transform"></span>
                            </button>
                        </div>

                        @if (_requirePassword)
                        {
                            <div>
                                <label class="block text-sm font-medium text-gray-200 mb-2">Password</label>
                                <input @bind="_password"
                                       type="password"
                                       class="w-full bg-[#0F0F0F] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500" />
                                <p class="text-xs text-gray-400 mt-1">Viewers will need this password to access the conversation</p>
                            </div>
                        }

                        @* Expiration Period *@
                        <div>
                            <label class="block text-sm font-medium text-gray-200 mb-2">Link expires</label>
                            <select @bind="_expirationPeriod"
                                    class="w-full bg-[#0F0F0F] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                                <option value="never">Never</option>
                                <option value="1hour">1 hour</option>
                                <option value="24hours">24 hours</option>
                                <option value="7days">7 days</option>
                                <option value="30days">30 days</option>
                            </select>
                        </div>
                    }
                </div>
            </div>

            @* Dialog Actions *@
            <div class="px-6 py-4 border-t border-[#2A2A2A] flex items-center justify-end gap-3 sticky bottom-0 bg-[#1A1A1A]">
                <button @onclick="Close"
                        class="px-4 py-2 bg-transparent border border-[#2A2A2A] text-gray-300 hover:bg-[#2A2A2A] rounded-lg transition-all text-sm font-medium">
                    Close
                </button>
                <button @onclick="GenerateShareLink"
                        class="flex items-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white rounded-lg transition-all text-sm font-medium">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                    </svg>
                    Generate New Link
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter]
    public string ConversationId { get; set; } = string.Empty;

    [Parameter]
    public string ConversationTitle { get; set; } = "Untitled Conversation";

    [Parameter]
    public EventCallback OnClose { get; set; }

    private string _shareUrl = string.Empty;
    private bool _showQRCode = false;
    private bool _allowPublicAccess = true;
    private bool _requirePassword = false;
    private string _password = string.Empty;
    private string _expirationPeriod = "never";
    private string _successMessage = string.Empty;
    private string _errorMessage = string.Empty;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        GenerateShareLink();
    }

    private void GenerateShareLink()
    {
        // Generate a shareable URL
        var baseUrl = "https://aimate.app/share"; // IMPLEMENTATION NEEDED: Get from IConfiguration["AppSettings:BaseUrl"]
        var shareToken = Guid.NewGuid().ToString("N")[..12]; // Short token
        _shareUrl = $"{baseUrl}/{shareToken}";

        _successMessage = "Share link generated";
        Console.WriteLine(_successMessage);
    }

    private async Task CopyLinkToClipboard()
    {
        try
        {
            await JS.InvokeVoidAsync("navigator.clipboard.writeText", _shareUrl);
            _successMessage = "Link copied to clipboard!";
            Console.WriteLine(_successMessage);
        }
        catch
        {
            _errorMessage = "Failed to copy link";
            Console.WriteLine(_errorMessage);
        }
    }

    private void ShareOnPlatform(string platform)
    {
        var encodedUrl = Uri.EscapeDataString(_shareUrl);
        var encodedTitle = Uri.EscapeDataString($"Check out this conversation: {ConversationTitle}");
        var encodedText = Uri.EscapeDataString($"I thought you might find this interesting: {ConversationTitle}");

        var shareUrl = platform switch
        {
            "twitter" => $"https://twitter.com/intent/tweet?url={encodedUrl}&text={encodedTitle}",
            "facebook" => $"https://www.facebook.com/sharer/sharer.php?u={encodedUrl}",
            "linkedin" => $"https://www.linkedin.com/sharing/share-offsite/?url={encodedUrl}",
            "whatsapp" => $"https://wa.me/?text={encodedTitle}%20{encodedUrl}",
            "email" => $"mailto:?subject={encodedTitle}&body={encodedText}%0A%0A{encodedUrl}",
            "reddit" => $"https://reddit.com/submit?url={encodedUrl}&title={encodedTitle}",
            _ => _shareUrl
        };

        // Open in new window
        JS.InvokeVoidAsync("open", shareUrl, "_blank");

        Console.WriteLine($"Opening {platform} share dialog...");
    }

    private void ToggleQRCode()
    {
        _showQRCode = !_showQRCode;
    }

    private string GetQRCodeUrl()
    {
        // Use a QR code generation service
        var encodedUrl = Uri.EscapeDataString(_shareUrl);
        return $"https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={encodedUrl}";
    }

    private void OnPrivacyChanged(bool value)
    {
        if (!value)
        {
            _requirePassword = false;
            _password = string.Empty;
        }
    }

    private async Task Close()
    {
        if (OnClose.HasDelegate)
        {
            await OnClose.InvokeAsync();
        }
        await IsVisibleChanged.InvokeAsync(false);
    }
}
