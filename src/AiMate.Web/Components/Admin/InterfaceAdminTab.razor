@* Mobile-first responsive Interface Admin Tab *@

<div class="space-y-6 md:space-y-8">

    @* Section: Task Model *@
    <div>
        <div class="flex items-center gap-2 mb-4">
            <h3 class="text-base md:text-lg font-semibold text-white">Task Model</h3>
            <button class="p-1 text-gray-400 hover:text-white transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"/>
                    <line x1="12" y1="17" x2="12.01" y2="17"/>
                </svg>
            </button>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            @* Local Task Model *@
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <label class="block text-sm font-medium text-white mb-2">Local Task Model</label>
                <select @bind="localTaskModel" class="w-full bg-[#1A1A1A] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                    <option value="current">Current Model</option>
                    <option value="gpt-4">GPT-4</option>
                    <option value="gpt-3.5-turbo">GPT-3.5 Turbo</option>
                    <option value="claude-3-opus">Claude 3 Opus</option>
                </select>
            </div>

            @* External Task Model *@
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <label class="block text-sm font-medium text-white mb-2">External Task Model</label>
                <select @bind="externalTaskModel" class="w-full bg-[#1A1A1A] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                    <option value="current">Current Model</option>
                    <option value="gpt-4">GPT-4</option>
                    <option value="gpt-3.5-turbo">GPT-3.5 Turbo</option>
                    <option value="claude-3-opus">Claude 3 Opus</option>
                </select>
            </div>
        </div>
    </div>

    @* Section: Title Generation *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Title Generation</h3>

        <div class="space-y-4">
            @* Title Generation Toggle *@
            <div class="flex items-center justify-between p-4 bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg">
                <div class="flex-1">
                    <div class="text-sm font-medium text-white">Title Generation</div>
                    <div class="text-xs text-gray-400 mt-1">Automatically generate titles for conversations</div>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" @bind="titleGeneration" class="sr-only peer">
                    <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
                </label>
            </div>

            @* Title Generation Prompt *@
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <label class="block text-sm font-medium text-white mb-2">Title Generation Prompt</label>
                <textarea @bind="titleGenerationPrompt"
                          rows="4"
                          placeholder="Leave empty to use the default prompt, or enter a custom prompt"
                          class="w-full bg-[#1A1A1A] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 resize-none font-mono">
                </textarea>
                <div class="text-xs text-gray-500 mt-2">Leave empty to use the default prompt</div>
            </div>
        </div>
    </div>

    @* Section: Follow Up Generation *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Follow Up Generation</h3>

        <div class="flex items-center justify-between p-4 bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg">
            <div class="flex-1">
                <div class="text-sm font-medium text-white">Follow Up Generation</div>
                <div class="text-xs text-gray-400 mt-1">Suggest follow-up questions after responses</div>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" @bind="followUpGeneration" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
            </label>
        </div>
    </div>

    @* Section: Tags Generation *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Tags Generation</h3>

        <div class="flex items-center justify-between p-4 bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg">
            <div class="flex-1">
                <div class="text-sm font-medium text-white">Tags Generation</div>
                <div class="text-xs text-gray-400 mt-1">Automatically generate tags for content organization</div>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" @bind="tagsGeneration" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
            </label>
        </div>
    </div>

    @* Section: Retrieval Query Generation *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Retrieval Query Generation</h3>

        <div class="flex items-center justify-between p-4 bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg">
            <div class="flex-1">
                <div class="text-sm font-medium text-white">Retrieval Query Generation</div>
                <div class="text-xs text-gray-400 mt-1">Generate optimized queries for knowledge retrieval</div>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" @bind="retrievalQueryGeneration" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
            </label>
        </div>
    </div>

    @* Section: Web Search Query Generation *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Web Search Query Generation</h3>

        <div class="flex items-center justify-between p-4 bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg">
            <div class="flex-1">
                <div class="text-sm font-medium text-white">Web Search Query Generation</div>
                <div class="text-xs text-gray-400 mt-1">Generate optimized web search queries</div>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" @bind="webSearchQueryGeneration" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
            </label>
        </div>
    </div>

    @* Section: Query Generation Prompt *@
    <div>
        <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
            <label class="block text-sm font-medium text-white mb-2">Query Generation Prompt</label>
            <textarea @bind="queryGenerationPrompt"
                      rows="4"
                      placeholder="Leave empty to use the default prompt, or enter a custom prompt"
                      class="w-full bg-[#1A1A1A] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 resize-none font-mono">
            </textarea>
            <div class="text-xs text-gray-500 mt-2">Leave empty to use the default prompt</div>
        </div>
    </div>

    @* Section: Autocomplete Generation *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Autocomplete Generation</h3>

        <div class="flex items-center justify-between p-4 bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg">
            <div class="flex-1">
                <div class="text-sm font-medium text-white">Autocomplete Generation</div>
                <div class="text-xs text-gray-400 mt-1">Provide autocomplete suggestions as you type</div>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
                <input type="checkbox" @bind="autocompleteGeneration" class="sr-only peer">
                <div class="w-11 h-6 bg-gray-700 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-purple-500 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-purple-600"></div>
            </label>
        </div>
    </div>

    @* Section: Image Prompt Generation *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Image Prompt Generation</h3>

        <div class="space-y-4">
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <label class="block text-sm font-medium text-white mb-2">Image Prompt Generation Prompt</label>
                <textarea @bind="imagePromptGenerationPrompt"
                          rows="4"
                          placeholder="Leave empty to use the default prompt, or enter a custom prompt"
                          class="w-full bg-[#1A1A1A] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 resize-none font-mono">
                </textarea>
                <div class="text-xs text-gray-500 mt-2">Leave empty to use the default prompt</div>
            </div>
        </div>
    </div>

</div>

@code {
    private string localTaskModel = "current";
    private string externalTaskModel = "current";
    private bool titleGeneration = true;
    private string titleGenerationPrompt = "";
    private bool followUpGeneration = false;
    private bool tagsGeneration = true;
    private bool retrievalQueryGeneration = true;
    private bool webSearchQueryGeneration = false;
    private string queryGenerationPrompt = "";
    private bool autocompleteGeneration = false;
    private string imagePromptGenerationPrompt = "";
}
