@* Component to highlight search terms in text *@
@if (!string.IsNullOrEmpty(SearchTerm) && !string.IsNullOrEmpty(Text))
{
    var index = Text.IndexOf(SearchTerm, StringComparison.OrdinalIgnoreCase);
    if (index >= 0)
    {
        <text>
            @Text.Substring(0, index)<mark style="background-color: yellow; padding: 0 2px;">@Text.Substring(index, SearchTerm.Length)</mark>@Text.Substring(index + SearchTerm.Length)
        </text>
    }
    else
    {
        @Text
    }
}
else
{
    @Text
}

@code {
    [Parameter]
    public string? Text { get; set; }

    [Parameter]
    public string? SearchTerm { get; set; }
}
