@using Fluxor
@using AiMate.Web.Store.Settings
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<SettingsState> SettingsState
@inject IDispatcher Dispatcher

@* Mobile-first responsive General Settings Tab *@

<div class="space-y-6 md:space-y-8">

    @* Section: WebUI Settings *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">WebUI Settings</h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            @* Language Selection *@
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <label class="block text-sm font-medium text-white mb-2">Language</label>
                <select @bind="_language"
                        @bind:after="@(() => Dispatcher.Dispatch(new UpdateLanguageAction(_language)))"
                        class="w-full bg-[#1A1A1A] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                    <option value="en-GB">English (GB)</option>
                    <option value="en-US">English (US)</option>
                    <option value="en-NZ">English (NZ)</option>
                    <option value="mi-NZ">Te Reo MƒÅori</option>
                </select>
            </div>

            @* Notifications *@
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <label class="block text-sm font-medium text-white mb-2">Notifications</label>
                <select @bind="_notificationSetting"
                        class="w-full bg-[#1A1A1A] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500">
                    <option value="off">Off</option>
                    <option value="on">On</option>
                </select>
            </div>
        </div>
    </div>

    @* Section: System Prompt *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">System Prompt</h3>

        <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
            <p class="text-sm text-gray-400 mb-3">
                Customize the AI's behavior and response style with your own system prompt
            </p>
            <textarea @bind="_systemPrompt"
                      rows="10"
                      class="w-full bg-[#1A1A1A] border border-[#2A2A2A] text-white rounded-lg px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-purple-500 resize-none font-mono"
                      placeholder="Enter your system prompt here...">
            </textarea>
        </div>
    </div>

</div>

@code {
    private string _language = "en-NZ";
    private string _timeZone = "Pacific/Auckland";
    private bool _enableNotifications = true;
    private bool _enableSoundEffects = false;
    private string _notificationSetting = "off";
    private string _systemPrompt = @"[Culture]
Location: New Zealand/Aotearoa (Land of the Long White Cloud)
Population: Kiwis/New Zealanders
Style: Laid back and friendly, less formal
Currency: NZD
Language: New Zealand English (Colour vs Color, Homogenise vs Homogenize)";

    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        _language = SettingsState.Value.Language;
        _timeZone = SettingsState.Value.TimeZone;
        _enableNotifications = SettingsState.Value.EnableNotifications;
        _enableSoundEffects = SettingsState.Value.EnableSoundEffects;
        _notificationSetting = _enableNotifications ? "on" : "off";
    }
}
