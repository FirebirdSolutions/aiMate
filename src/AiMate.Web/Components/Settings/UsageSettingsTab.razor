@using Fluxor
@using AiMate.Web.Store.Settings
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<SettingsState> SettingsState
@inject IDispatcher Dispatcher

@* Mobile-first responsive Usage Settings Tab *@

<div class="space-y-6 md:space-y-8">

    @* Section: Current Billing Period *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Current Billing Period</h3>
        <p class="text-sm text-gray-400 mb-4">Nov 1, 2025 - Nov 30, 2025</p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            @* Total Messages Card *@
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <div class="text-xs text-gray-400 mb-1">Total Messages</div>
                <div class="text-2xl font-semibold text-white">5,262</div>
            </div>

            @* Total Tokens Card *@
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <div class="text-xs text-gray-400 mb-1">Total Tokens</div>
                <div class="text-2xl font-semibold text-white">1558.1K</div>
            </div>

            @* Total Cost Card *@
            <div class="bg-[#0F0F0F] border border-[#2A2A2A] rounded-lg p-4">
                <div class="text-xs text-gray-400 mb-1">Total Cost</div>
                <div class="text-2xl font-semibold text-purple-400">$41.87</div>
            </div>
        </div>

        @* View Detailed Analytics Button *@
        <div class="mt-4">
            <button @onclick="HandleViewAnalytics"
                    class="w-full md:w-auto px-4 py-2 bg-[#0F0F0F] hover:bg-[#2A2A2A] border border-[#2A2A2A] text-white text-sm font-medium rounded-lg transition-all">
                View Detailed Analytics
            </button>
        </div>
    </div>

    @* Section: Usage by Model *@
    <div>
        <h3 class="text-base md:text-lg font-semibold text-white mb-4">Usage by Model</h3>

        <div class="overflow-x-auto">
            <table class="w-full text-sm">
                <thead>
                    <tr class="border-b border-[#2A2A2A]">
                        <th class="text-left text-gray-400 font-medium py-3 px-4">Model</th>
                        <th class="text-left text-gray-400 font-medium py-3 px-4">Connection</th>
                        <th class="text-right text-gray-400 font-medium py-3 px-4">Messages</th>
                        <th class="text-right text-gray-400 font-medium py-3 px-4">Tokens</th>
                        <th class="text-right text-gray-400 font-medium py-3 px-4">Cost</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usage in usageData)
                    {
                        <tr class="border-b border-[#2A2A2A] hover:bg-[#0F0F0F] transition-colors">
                            <td class="py-3 px-4">
                                <div class="text-white font-medium" style="color: @usage.Color">@usage.Model</div>
                            </td>
                            <td class="py-3 px-4 text-gray-300">@usage.Connection</td>
                            <td class="py-3 px-4 text-right text-gray-300">@usage.Messages</td>
                            <td class="py-3 px-4 text-right text-gray-300">@usage.Tokens</td>
                            <td class="py-3 px-4 text-right text-gray-300">@usage.Cost</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

@code {
    private List<UsageData> usageData = new()
    {
        new UsageData { Model = "GPT-4", Connection = "OpenAI", Messages = 2847, Tokens = "771.5K", Cost = "$23.14", Color = "#A855F7" },
        new UsageData { Model = "Claude 3 Opus", Connection = "Anthropic", Messages = 892, Tokens = "300.5K", Cost = "$9.01", Color = "#F97316" },
        new UsageData { Model = "GPT-4 Turbo", Connection = "OpenAI", Messages = 1523, Tokens = "486.1K", Cost = "$9.72", Color = "#A855F7" }
    };

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
    }

    private void HandleViewAnalytics()
    {
        // TODO: Navigate to detailed analytics page
    }

    public class UsageData
    {
        public string Model { get; set; } = "";
        public string Connection { get; set; } = "";
        public int Messages { get; set; }
        public string Tokens { get; set; } = "";
        public string Cost { get; set; } = "";
        public string Color { get; set; } = "";
    }
}
