@using Fluxor
@using AiMate.Web.Store.Admin
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<AdminState> AdminState
@inject IDispatcher Dispatcher
@inject IDialogService DialogService

<MudStack Spacing="3">
    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Center">
        <MudText Typo="Typo.h6">Model Context Protocol Servers</MudText>
        <MudButton Variant="Variant.Filled"
                  Color="Color.Primary"
                  StartIcon="@Icons.Material.Filled.Add"
                  OnClick="@HandleAddMcpServer">
            Add MCP Server
        </MudButton>
    </MudStack>
    <MudDivider />

    <MudAlert Severity="Severity.Info">
        MCP servers provide tools and capabilities to AI models. Configure global servers here.
    </MudAlert>

    @if (AdminState.Value.McpServers.Any())
    {
        <MudTable T="MCPServerConfig" Items="@AdminState.Value.McpServers" Hover="true" Striped="true">
            <HeaderContent>
                <MudTh>Name</MudTh>
                <MudTh>Type</MudTh>
                <MudTh>Status</MudTh>
                <MudTh>Tools</MudTh>
                <MudTh>Actions</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Type">
                    <MudChip T="string" Size="Size.Small">@context.Type</MudChip>
                </MudTd>
                <MudTd DataLabel="Status">
                    <MudChip T="string" Size="Size.Small" Color="@(context.Connected ? Color.Success : Color.Error)">
                        @(context.Connected ? "Connected" : "Disconnected")
                    </MudChip>
                </MudTd>
                <MudTd DataLabel="Tools">@context.ToolCount tools</MudTd>
                <MudTd DataLabel="Actions">
                    <MudStack Row="true" Spacing="1">
                        <MudIconButton Icon="@Icons.Material.Filled.Refresh"
                                      Size="Size.Small"
                                      Title="Reconnect"
                                      OnClick="@(() => HandleReconnect(context.Id))" />
                        <MudIconButton Icon="@Icons.Material.Filled.Edit"
                                      Size="Size.Small"
                                      OnClick="@(() => HandleEditMcpServer(context))" />
                        <MudIconButton Icon="@Icons.Material.Filled.Delete"
                                      Size="Size.Small"
                                      Color="Color.Error"
                                      OnClick="@(() => HandleDeleteMcpServer(context.Id))" />
                    </MudStack>
                </MudTd>
            </RowTemplate>
        </MudTable>
    }
    else
    {
        <MudPaper Class="pa-8" Elevation="0" Style="text-align: center;">
            <MudIcon Icon="@Icons.Material.Filled.Extension" Size="Size.Large" Color="Color.Secondary" />
            <MudText Typo="Typo.h6" Color="Color.Secondary" Class="mt-2">
                No MCP Servers Configured
            </MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Add MCP servers to extend AI capabilities with custom tools
            </MudText>
        </MudPaper>
    }
</MudStack>

@code {
    private async Task HandleAddMcpServer()
    {
        var parameters = new DialogParameters<AddMcpServerDialog>();
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        var dialog = await DialogService.ShowAsync<AddMcpServerDialog>("Add MCP Server", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is MCPServerConfig server)
        {
            Dispatcher.Dispatch(new AddMcpServerAction(server));
        }
    }

    private async Task HandleEditMcpServer(MCPServerConfig server)
    {
        var parameters = new DialogParameters<AddMcpServerDialog>
        {
            { x => x.Server, server }
        };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        var dialog = await DialogService.ShowAsync<AddMcpServerDialog>("Edit MCP Server", parameters, options);
        var result = await dialog.Result;

        if (!result.Canceled && result.Data is MCPServerConfig updatedServer)
        {
            Dispatcher.Dispatch(new UpdateMcpServerAction(updatedServer));
        }
    }

    private void HandleReconnect(string serverId)
    {
        Dispatcher.Dispatch(new ReconnectMcpServerAction(serverId));
    }

    private async Task HandleDeleteMcpServer(string serverId)
    {
        var confirmed = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this MCP server?",
            yesText: "Delete",
            cancelText: "Cancel");

        if (confirmed == true)
        {
            Dispatcher.Dispatch(new DeleteMcpServerAction(serverId));
        }
    }
}
