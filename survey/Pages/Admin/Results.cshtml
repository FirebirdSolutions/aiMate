@page
@model ResultsModel
@{
    ViewData["Title"] = "Survey Results - Admin";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="/css/survey.css" rel="stylesheet" />
    <style>
        .admin-container {
            max-width: 1400px;
            margin: 20px auto;
            padding: 20px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .admin-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #e0e0e0;
        }

        .admin-header h1 {
            color: #667eea;
            font-size: 2em;
            margin: 0;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        }

        .stat-card h3 {
            font-size: 0.9em;
            opacity: 0.9;
            margin-bottom: 10px;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .stat-card .number {
            font-size: 2.5em;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .stat-card .subtitle {
            font-size: 0.85em;
            opacity: 0.8;
        }

        .btn {
            padding: 10px 20px;
            background: #667eea;
            color: white;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1em;
            font-weight: 500;
            text-decoration: none;
            display: inline-block;
            transition: background 0.3s;
        }

        .btn:hover {
            background: #5568d3;
        }

        .btn-secondary {
            background: #48bb78;
        }

        .btn-secondary:hover {
            background: #38a169;
        }

        .tools-list {
            background: #f7fafc;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

        .tools-list h2 {
            color: #667eea;
            margin-bottom: 15px;
        }

        .tool-item {
            display: flex;
            justify-content: space-between;
            padding: 10px;
            margin-bottom: 8px;
            background: white;
            border-radius: 6px;
            border-left: 4px solid #667eea;
        }

        .tool-name {
            font-weight: 600;
            color: #2d3748;
        }

        .tool-count {
            color: #667eea;
            font-weight: 700;
        }

        .responses-container {
            margin-top: 40px;
        }

        .response-card {
            background: #f7fafc;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #667eea;
        }

        .response-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid #e0e0e0;
        }

        .response-id {
            font-weight: 600;
            color: #667eea;
        }

        .response-date {
            color: #718096;
            font-size: 0.9em;
        }

        .response-section {
            margin-bottom: 15px;
        }

        .response-section h4 {
            color: #2d3748;
            font-size: 0.9em;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .response-section p {
            color: #4a5568;
            margin: 5px 0;
        }

        .badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 12px;
            font-size: 0.85em;
            font-weight: 500;
            margin-right: 8px;
            margin-bottom: 4px;
        }

        .badge-primary {
            background: #ebf4ff;
            color: #667eea;
        }

        .badge-success {
            background: #c6f6d5;
            color: #22543d;
        }

        .badge-warning {
            background: #fef5e7;
            color: #975a16;
        }

        .auth-form {
            max-width: 400px;
            margin: 100px auto;
            padding: 40px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .auth-form h2 {
            color: #667eea;
            margin-bottom: 20px;
            text-align: center;
        }

        .auth-form input {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1em;
        }

        .auth-form button {
            width: 100%;
        }

        .loading {
            text-align: center;
            padding: 40px;
            color: #718096;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        <div id="authForm" class="auth-form">
            <h2>üîê Admin Access</h2>
            <input type="password" id="adminKey" placeholder="Enter admin key" autocomplete="off">
            <button class="btn" onclick="loadDashboard()">Access Dashboard</button>
            <p style="color: #718096; font-size: 0.85em; margin-top: 15px; text-align: center;">
                Set SURVEY_ADMIN_KEY environment variable or use default key
            </p>
        </div>

        <div id="dashboard" style="display: none;">
            <div class="admin-header">
                <h1>üìä Survey Results Dashboard</h1>
                <div>
                    <button class="btn btn-secondary" onclick="exportData()">üì• Export CSV</button>
                    <button class="btn" onclick="refreshData()" style="margin-left: 10px;">üîÑ Refresh</button>
                </div>
            </div>

            <div id="statsContainer" class="loading">Loading statistics...</div>
            <div id="toolsContainer"></div>
            <div id="responsesContainer"></div>
        </div>
    </div>

    <script>
        let adminKey = '';

        async function loadDashboard() {
            adminKey = document.getElementById('adminKey').value;
            if (!adminKey) {
                alert('Please enter an admin key');
                return;
            }

            try {
                await loadStats();
                await loadResponses();
                document.getElementById('authForm').style.display = 'none';
                document.getElementById('dashboard').style.display = 'block';
            } catch (error) {
                alert('Invalid admin key or error loading data');
                console.error(error);
            }
        }

        async function loadStats() {
            const response = await fetch(`/api/survey/stats?adminKey=${encodeURIComponent(adminKey)}`);
            if (!response.ok) throw new Error('Failed to load stats');

            const stats = await response.json();

            document.getElementById('statsContainer').innerHTML = `
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3>Total Responses</h3>
                        <div class="number">${stats.totalResponses}</div>
                        <div class="subtitle">Survey submissions</div>
                    </div>
                    <div class="stat-card">
                        <h3>AI Users</h3>
                        <div class="number">${stats.aiUsers}</div>
                        <div class="subtitle">${Math.round((stats.aiUsers / stats.totalResponses) * 100)}% of respondents</div>
                    </div>
                    <div class="stat-card">
                        <h3>Non-AI Users</h3>
                        <div class="number">${stats.nonAIUsers}</div>
                        <div class="subtitle">${Math.round((stats.nonAIUsers / stats.totalResponses) * 100)}% of respondents</div>
                    </div>
                    <div class="stat-card">
                        <h3>Alpha Testers</h3>
                        <div class="number">${stats.interestedInTesting}</div>
                        <div class="subtitle">${Math.round((stats.interestedInTesting / stats.totalResponses) * 100)}% interested</div>
                    </div>
                </div>
            `;

            if (stats.topTools && stats.topTools.length > 0) {
                document.getElementById('toolsContainer').innerHTML = `
                    <div class="tools-list">
                        <h2>Top AI Tools Mentioned</h2>
                        ${stats.topTools.map(tool => `
                            <div class="tool-item">
                                <span class="tool-name">${tool.tool}</span>
                                <span class="tool-count">${tool.count} mentions</span>
                            </div>
                        `).join('')}
                    </div>
                `;
            }
        }

        async function loadResponses() {
            const response = await fetch(`/api/survey/responses?adminKey=${encodeURIComponent(adminKey)}`);
            if (!response.ok) throw new Error('Failed to load responses');

            const responses = await response.json();

            document.getElementById('responsesContainer').innerHTML = `
                <div class="responses-container">
                    <h2 style="color: #667eea; margin-bottom: 20px;">Recent Responses (${responses.length})</h2>
                    ${responses.map(r => renderResponse(r)).join('')}
                </div>
            `;
        }

        function renderResponse(r) {
            const useCases = [];
            if (r.useForWork) useCases.push('Work');
            if (r.useForPersonalProjects) useCases.push('Personal Projects');
            if (r.useForLearning) useCases.push('Learning');
            if (r.useForCreativeWork) useCases.push('Creative');
            if (r.useForCoding) useCases.push('Coding');
            if (r.useForWriting) useCases.push('Writing');
            if (r.useForResearch) useCases.push('Research');

            return `
                <div class="response-card">
                    <div class="response-header">
                        <span class="response-id">#${r.id}</span>
                        <span class="response-date">${new Date(r.submittedAt).toLocaleString()}</span>
                    </div>

                    <div class="response-section">
                        <h4>Demographics</h4>
                        <p>
                            ${r.ageRange ? `<span class="badge badge-primary">${r.ageRange}</span>` : ''}
                            ${r.generalLocation ? `<span class="badge badge-primary">${r.generalLocation}</span>` : ''}
                            ${r.occupationCategory ? `<span class="badge badge-primary">${r.occupationCategory}</span>` : ''}
                            ${r.techComfortLevel ? `<span class="badge badge-primary">${r.techComfortLevel}</span>` : ''}
                        </p>
                    </div>

                    ${r.currentlyUsesAI ? `
                        <div class="response-section">
                            <h4>AI Usage</h4>
                            <p><strong>Tools:</strong> ${r.aiToolsUsed || 'Not specified'}</p>
                            <p><strong>Primary:</strong> ${r.primaryAITool || 'Not specified'}</p>
                            <p><strong>Frequency:</strong> ${r.frequencyOfUse || 'Not specified'}</p>
                            ${useCases.length > 0 ? `<p><strong>Use Cases:</strong> ${useCases.map(uc => `<span class="badge badge-success">${uc}</span>`).join('')}</p>` : ''}
                        </div>
                    ` : ''}

                    ${r.biggestFrustration ? `
                        <div class="response-section">
                            <h4>Biggest Frustration</h4>
                            <p>${r.biggestFrustration}</p>
                        </div>
                    ` : ''}

                    ${r.whatsMissing ? `
                        <div class="response-section">
                            <h4>What's Missing</h4>
                            <p>${r.whatsMissing}</p>
                        </div>
                    ` : ''}

                    ${r.idealAIFeatures ? `
                        <div class="response-section">
                            <h4>Ideal AI Features</h4>
                            <p>${r.idealAIFeatures}</p>
                        </div>
                    ` : ''}

                    ${r.interestedInAlphaTesting ? `
                        <div class="response-section">
                            <h4>Alpha Testing</h4>
                            <p><span class="badge badge-success">‚úì Interested</span> ${r.email ? `<strong>Email:</strong> ${r.email}` : ''}</p>
                        </div>
                    ` : ''}

                    ${r.referralSource ? `
                        <div class="response-section">
                            <h4>Source</h4>
                            <p><span class="badge badge-warning">${r.referralSource}</span></p>
                        </div>
                    ` : ''}
                </div>
            `;
        }

        async function refreshData() {
            await loadStats();
            await loadResponses();
        }

        function exportData() {
            window.location.href = `/api/survey/export?adminKey=${encodeURIComponent(adminKey)}`;
        }

        // Allow Enter key to submit auth
        document.getElementById('adminKey')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                loadDashboard();
            }
        });
    </script>
</body>
</html>
